<!DOCTYPE html>
<html>
    <head>
        <title>HTML5 Media Player</title>
        <script src="static/utils.js" type="text/javascript"></script>
        <script src="static/exceptions.js" type="text/javascript"></script>
        <script src="static/serverdata.js" type="text/javascript"></script>
        <script src="static/controls.js" type="text/javascript"></script>
        <script src="static/playercontrols.js" type="text/javascript"></script>
        <script src="static/theme.js" type="text/javascript"></script>
        <script src="static/interface.js" type="text/javascript"></script>
        <script src="static/init.js" type="text/javascript"></script>
        <link rel="stylesheet" type="text/css" href="static/base.css" />
        <link rel="stylesheet" type="text/css" href="static/theme.css" />
    </head>
    <body>
        <div id="playerPane">
            <img id="playerCover" src="static/nocover.svg" />
            <div id="player">
                <audio id="playerAudio"></audio>
                <a id="playerPlay">[Play/Pause]</a>
                <a id="playerStop">[Stop]</a>
                <a id="playerPrev">[Previous]</a>
                <a id="playerNext">[Next]</a>
                <a id="playerMute">[Mute]</a>
                <div id="metadata">
                    <span id="playerTime"></span>/<span id="playerLength"></span> - 
                    <span id="playerTitle"></span> -
                    <span id="playerArtist"></span> /
                    <span id="playerAlbum"></span>
                </div>
                <div id="playerScrubber">
                    <div id="playerScrubberProgress"></div>
                </div>
            </div>
            <div id="logo">Home page link</div>
        </div>
        
        <div id="bottom">
        
            <div id="sidebarPane">
                <h1>Playlists</h1>
                <ul id="sbPlaylists"></ul>
                <h1>Library</h1>
                <ul id="sbLibrary"></ul>
                <h1>Other</h1>
                <a href="admin/">Admin</a><br />
            </div>
            
            <div id="libraryPane">
                <div id="libraryHead">
                    <h1 id="libraryTitle" class="paneTitle">Library</h1>
                    <h2 id="librarySubheading" class="paneSubheading">Library catagory</h2>
                    <div id="libraryToolbar" class="paneToolbar"></div>
                </div>
                <div id="libraryContainer"></div>
                
                <!-- Though in libraryPane, filterPane technically belongs to the sidebar -->
                <div id="filterPane">
                    <h1 id="filterTitle">Filters</h1>
                    <ul id="filterList"></ul>
                </div>
            </div>
            
            <div id="queuePane">
                <div id="queueHead">
                    <h1 id="queueTitle" class="paneTitle">Queue</h1>
                    <h2 id="queueSubheading" class="paneSubheading">Queue contents</h2>
                    <div id="queueToolbar" class="paneToolbar"></div>
                </div>
                <div id="queueContainer"></div>
                <div id="queueBlankMessage"><i>No tracks queued</i></div>
            </div>
            
        </div>
    </body>
</html>
