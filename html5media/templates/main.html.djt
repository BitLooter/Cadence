<!DOCTYPE html>
<html>
    <head>
        <title>No title yet</title>
        <script src="/html5media/static/utils.js" type="text/javascript"></script>
        <script src="/html5media/static/controls.js" type="text/javascript"></script>
        <script src="/html5media/static/interface.js" type="text/javascript"></script>
        <script src="/html5media/static/player.js" type="text/javascript"></script>
        <link rel="stylesheet" type="text/css" href="/html5media/static/interface.css" />
    </head>
    <body>
        <div id="playerPane">
            <div id="player">
                <audio id="audioPlayer" src="" type='audio/ogg' controls></audio>
            </div>
            <div id="metadata">Nothing playing</div>
            <div id="logo">Home page link</div>
        </div>
        
        <div id="sidebarPane">
            <span class="sidebarHeader">Playlists</span>
            <div class="sidebarContainer" id="sbPlaylists"></div>
            <a href="/html5media/scanner/">Run scanner</a>
        </div>
        
        <section id="libraryPane">
            <h1>Library</h1>
            <div id="libraryToolbar">
                <button id="queueButton" type="button">Queue</button>
            </div>
            <div id="libraryContainer"></div>
        </section>
        
        <section id="queuePane">
            <h1>Queue</h1>
            <div id="queueToolbar">
                <button id="savePlaylistButton" type="button">Save playlist</button>
                <button id="removeButton" type="button">Remove</button>
            </div>
            <div id="queueContainer"></div>
        </div>
    </body>
</html>
